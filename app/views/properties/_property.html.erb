<li>
  <h3 class="title"><%= property.title %></h3>
  <h4 class="description"><%= property.description %></h4>

  <table width="100%">
    <tr width="100%">
      <td width="50%">
        <span>
          <table>
            <tr>
              <td valign="top"><b>Address</b></td>
              <td><span><%= property.addr1 %><br/><%= property.addr2 %><br/><%= property.city %><br/><%= property.state %></span></td>
            </tr>
            <tr>
              <td><b>Property type</b></td>
              <td><span><%= property.prop_type %></span></td>
            </tr>
            <tr>
              <td><b>Rate per night</b></td>
              <td><span><%= property.rate %></span></td>
            </tr>
            <tr>
              <td><b>Start Date</b></td>
              <td><span><%= Date.strptime(property.avail_start.to_s, "%Y-%m-%d %H:%M:%S %Z").strftime("%d/%m/%Y") %></span></td>
            </tr>
            <tr>
              <td><b>Closing Date</b></td>
              <td><span><%= Date.strptime( property.avail_end.to_s, "%Y-%m-%d %H:%M:%S %Z").strftime("%d/%m/%Y") %></span></td>
            </tr>
          </table>
        </span>
      </td>
      <td width="30%">
        <% if property.image? %>
          <%= image_tag property.image.url(:medium) %>
        <% end %>
      </td>
      <td width="20%">
        <button class="btn btn-mini pull-right"><i class="icon-time"></i><%= link_to "Booking History", booking_history_path(:id => property.id.to_i) %></button>
        <br/><br/><br/>
        <button class="btn btn-mini pull-right"><i class="icon-edit"></i><%= link_to "Edit property", edit_property_path(:id => property.id.to_i) %></button>
        <br/><br/><br/>
        <button class="btn btn-mini pull-right"><i class="icon-remove-sign"></i><%= link_to "Delete property", property, method: :delete, data: { confirm: "You sure?" }, title: property.title %></button>
      </td>
    </tr>
  </table>
  
</li>
